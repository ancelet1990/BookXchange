    <!--app:layout_constraintVertical_bias="0.0" />-->

    <TextView
        android:id="@+id/txtAccountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="40dp"
        android:gravity="start"
        android:text="@android:string/unknownName"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAppName" />
    <!--android:paddingLeft="32dp"-->
    <!--android:paddingTop="50dp"-->
    <!--android:paddingRight="32dp"-->

    <!--android:paddingLeft="50dp"-->
    <!--android:paddingRight="50dp"-->
    <TextView
        android:id="@+id/txtAccountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="@android:string/unknownName"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccountName" />

    <TextView
        android:id="@+id/txtAccountEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="E-mail:"
        android:textAllCaps="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccountName2" />

    <TextView
        android:id="@+id/txtAccountSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="@android:string/unknownName"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccountEmail" />
    <!--android:paddingLeft="50dp"-->
    <!--android:paddingRight="50dp"-->
    <!--android:paddingBottom="50dp"-->
    <TextView
        android:id="@+id/txtAccountSchool2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:text="School:"
        android:textAllCaps="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccountEmail2" />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:layout_marginTop="64dp"
        android:background="?attr/colorPrimary"
        android:text="@string/change_password"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAccountSchool" />
    <!--app:layout_constraintTop_toBottomOf="@+id/background" />-->

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="85dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:contentDescription="@string/image_logo"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book_green" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="285dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="?attr/colorPrimary"
        android:text="@string/sign_out"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePassword" />


</android.support.constraint.ConstraintLayout>